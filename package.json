{
	"name": "lightbot",
	"version": "2.24.0",
	"description": "Ticketing, prompting and invoicing bot originally for Light Services.",
	"main": "src/index.ts",
	"scripts": {
		"start": "node --enable-source-maps index.js",
		"build": "esbuild src/index.ts --bundle --outfile=index.js --platform=node --target=node18 --minify --keep-names --sourcemap",
		"build:plugins": "node scripts/build-plugins.js",
		"dev": "pnpm run build:plugins && pnpm run build && node --enable-source-maps index.js",
		"dev:watch": "concurrently -r \"esbuild src/index.ts --bundle --outfile=index.js --platform=node --keep-names --sourcemap=inline --watch --target=node18  --sourcemap\" \"node --enable-source-maps --watch index.js\"",
		"genlangtypes": "node scripts/generate-lang-types.js --watch"
	},
	"keywords": [
		"bot",
		"paypal",
		"invoicing",
		"prompting",
		"ticketing",
		"light services"
	],
	"author": "NorteX",
	"license": "Consult BuiltByBit",
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "^4.19.5",
		"@types/js-yaml": "^4.0.9",
		"@types/lodash": "^4.17.7",
		"@types/mime": "3",
		"@types/morgan": "^1.9.9",
		"@types/ms": "^0.7.34",
		"@types/node": "^22.4.0",
		"@types/validator": "^13.12.0",
		"@types/ws": "^8.5.12",
		"discord-api-types": "^0.37.94",
		"esbuild": "^0.23.1",
		"glob": "^11.0.0",
		"nodemon": "^3.1.4",
		"ollama": "^0.5.14",
		"openai": "^4.77.0",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@discordjs/rest": "^2.4.0",
		"@nortex/config": "^2.1.1",
		"@nortex/pretty-zod-error": "^2.0.0",
		"ansi-colors": "^4.1.3",
		"axios": "^1.7.4",
		"cors": "^2.8.5",
		"dayjs": "^1.11.12",
		"discord.js": "14.15.3",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-rate-limit": "^7.4.0",
		"fuse.js": "^7.0.0",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"mime": "^3.0.0",
		"morgan": "^1.10.0",
		"ms": "^2.1.3",
		"mysql2": "^3.11.0",
		"nanoid": "^3.3.7",
		"nhandler": "4.2.0",
		"pg": "^8.12.0",
		"pg-hstore": "^2.3.4",
		"reflect-metadata": "^0.2.2",
		"sequelize": "^6.37.3",
		"sequelize-typescript": "^2.1.6",
		"sqlite3": "^5.1.7",
		"stripe": "^17.5.0",
		"toml": "^3.0.0",
		"zod": "^3.23.8"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sqlite3"
		]
	}
}
