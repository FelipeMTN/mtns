{
	"compilerOptions": {
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "es2020",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"paths": {
			"@api/*": ["./src/api/*"],
			"@classes/*": ["./src/classes/*"],
			"@schemas/*": ["./src/schemas/*"],
			"@util/*": ["./src/util/*"],
			"@intervals/*": ["./src/intervals/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
